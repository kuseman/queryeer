<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <dependencySets>
        <dependencySet>
            <excludes>
                <exclude>*:sources</exclude>
            </excludes>
            <fileMode>0644</fileMode>
            <includes>
                <include>*:jar:*</include>
            </includes>
            <outputDirectory>lib/</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/target</directory>
            <includes>
                <include>CHANGELOG.md</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../queryeer-ide/src/main/resources/icons
            </directory>
            <includes>
                <include>icons8*</include>
            </includes>
            <outputDirectory>icons/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/dist/bin</directory>
            <fileMode>0755</fileMode>
            <includes>
                <include>*.sh</include>
                <include>*.bat</include>
            </includes>
            <outputDirectory>bin/</outputDirectory>
        </fileSet>
        <fileSet>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
            <outputDirectory>etc/</outputDirectory>
        </fileSet>
        <fileSet>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
            <outputDirectory>shared/</outputDirectory>
        </fileSet>
        <!-- Bundle core plugins -->
        <fileSet>
            <directory>${root}/queryeer-catalog/target/queryeer-catalog-dist/queryeer-catalog
            </directory>
            <outputDirectory>plugins/queryeer-catalog-${project.version}
            </outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/jre-win64</directory>
            <outputDirectory>jre-win64</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <id>dist</id>
</assembly>